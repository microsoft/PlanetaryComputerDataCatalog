{
  "mosaics": [
    {
      "name": "Most recent (low cloud)",
      "description": "",
      "cql": "eo:cloud_cover < 20 order by datetime desc",
      "renderers": [
        {
          "name": "True Color",
          "description": "RGB from visual asset",
          "options": "assets=visual&bidx=1,2,3&nodata=0"
        },
        {
          "name": "False Color (infrared)",
          "description": "NIR(B08), Red (B04), Green (B03)",
          "options": "assets=B08,B04,B03&nodata=0&color_formula=Gamma%20RGB%203.5%20Saturation%201.7%20Sigmoidal%20RGB%2015%200.35"
        },
        {
          "name": "NDVI",
          "description": "(NIR-Red)/(NIR+Red)",
          "options": "nodata=0&expression=(B08-B04)/(B08+B04)&rescale=-1,1&colormap_name=viridis"
        }
      ]
    },
